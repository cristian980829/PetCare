@model PetCare.Api.Models.MedicalFormulaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Formula de Historia Clínica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFormula">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClinicalHistoryId" />

            <partial name="_Formula" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="FormulaClinicalHistory" asp-route-id="@Model.ClinicalHistoryId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}