@model PetCare.Api.Models.MedicalFormulaViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Fórmula a la Historia Clínica</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddFormula" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClinicalHistoryId" />

            <partial name="_Formula" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="FormulaClinicalHistory" asp-route-id="@Model.ClinicalHistoryId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}